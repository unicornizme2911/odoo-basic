<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--        List View -->
        <record id="view_school_information" model="ir.ui.view">
            <field name="name">school.information.list</field>
            <field name="model">school.information</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="type" />
                    <field name="email" />
                    <field name="address" />
                    <field name="phone" />
                </list>
            </field>
        </record>

<!--        Form View -->
        <record id="view_information_form" model="ir.ui.view">
            <field name="name">school.information.form</field>
            <field name="model">school.information</field>
            <field name="arch" type="xml">
                <form string="School Information">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="email"/>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="address"/>
                                <field name="phone"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--        Action -->
        <record id="action_school_information" model="ir.actions.act_window">
            <field name="name">Information</field>
            <field name="res_model">school.information</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_school_information">
                    Create a new school for more!
                </p>
            </field>
        </record>
<!--        Menu -->
        <menuitem id="school_menu_root" name="School" sequence="1"/>
        <menuitem id="school_information_menu" name="Information" action="action_school_information"
                  parent="school_menu_root" sequence="2"/>
    </data>
</odoo>
