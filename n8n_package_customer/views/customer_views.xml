<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="n8n_package_customer_form_view" model="ir.ui.view">
            <field name="name">n8n.package.customer.form</field>
            <field name="model">n8n.package.customer</field>
            <field name="arch" type="xml">
                <form string="Khách hàng n8n">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="notes"/>
                        </group>
                        <notebook>
                            <page string="Gói dịch vụ đã mua">
                                <field name="package_order_ids">
                                    <tree editable="bottom">
                                        <field name="package_name"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="n8n_package_customer_tree_view" model="ir.ui.view">
            <field name="name">n8n.package.customer.tree</field>
            <field name="model">n8n.package.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <record id="action_n8n_package_customer" model="ir.actions.act_window">
            <field name="name">Khách hàng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">n8n.package.customer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new customer.
                </p>
            </field>
        </record>

        <menuitem id="menu_n8n_root" name="N8N Dịch vụ" web_icon="n8n_package_customer,static/description/icon.png"/>
        <menuitem id="menu_n8n_customers" name="Khách hàng" parent="menu_n8n_root" action="action_n8n_package_customer"/>
    </data>
</odoo>